{{#if updateQuestionForm}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name:</label>
        {{input class="form-control" value=question.author id="author" }}
      </div>
      <div class="form-group">
        <label for="question">Question you would like to ask:</label>
        {{input class="form-control" value=question.question id="question"}}
      </div>
      <div class="form-group">
        <label for="notes">Any other details about your question?</label>
        {{textarea class="form-control" value=question.notes id="notes"}}
      </div>
      <button class="btn btn-success" {{action 'update' question}}>Save Update</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
